<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginTop="16dp"
    app:cardCornerRadius="10dp"

    app:layout_constraintTop_toTopOf="parent"
    tools:layout_editor_absoluteX="54dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/stdImage"
                android:layout_width="100dp"
                android:layout_height="130dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/splash2" />


            <ImageView
                android:id="@+id/itemOption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="44dp"
                android:background="@drawable/more_vert_black"

                />

            <TextView
                android:id="@+id/stdName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/itemOption"
                android:layout_alignParentStart="true"
                android:layout_marginStart="142dp"
                android:text="Name"
                android:textColor="@color/background"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/coursesNames"
                android:layout_width="200dp"
                android:layout_height="32dp"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/stdName"
                android:layout_marginBottom="44dp"
                android:text="course" />


        </RelativeLayout>

</android.support.v7.widget.CardView>